{
  "manifest_version": 3,
  "name": "Rainbow Bear",
  "version": "1.12",
  "description": "Brings vibrant, colorful highlights to Notion pages, making key content instantly stand out.",
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "permissions": [
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.notion.so/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ]
}
