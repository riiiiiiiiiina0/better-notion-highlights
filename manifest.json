{
  "manifest_version": 3,
  "name": "Notion Highlighter",
  "version": "1.0",
  "description": "Enhances Notion page highlights.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.notion.so/*"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}