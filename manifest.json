{
  "manifest_version": 3,
  "name": "Better Notion Highlights",
  "version": "1.4",
  "description": "Enhances Notion page highlights.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "*://*.notion.so/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ]
}
